<%- include('../partials/header'); -%>
<div class="container w-50 mx-auto" style=" width:fit-content; margin: auto auto; margin-top: 10%; " >  
    <div class="display-4 text-center">
       Comments on  <%= camp.name %>
    </div>
    
    <form class="form-signin" action = '/campgrounds/<%= camp._id %>/comments/<%= comment._id %>?_method=PUT' method = 'POST' >
        <h1 class="h3 mb-3 font-weight-normal">Edit Comment</h1>
        <div class="form-group">
            <textarea rows="6" id="inputPassword" class="form-control" placeholder="put your commment here" name = 'commentText'><%= comment.text %></textarea>
        </div>
        
        <button class="btn btn-lg btn-primary btn-block" type="submit">SUBMIT</button>
    </form>
</div> 
 
<%- include('../partials/footer'); -%>