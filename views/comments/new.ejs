<%- include('../partials/header'); -%>
<div class="container form-page" >  
    <div class="display-4 text-center">
       Review 
    </div>
    <h1 class="text-center mb-4"> <%= camp.name %> </h1>
    <form  action = '/campgrounds/<%= camp._id %>/comments' method = 'POST' >

        <div class="form-group">
            <label for="inoutComment">Comment</label>
            <textarea type="text" id="inoutComment" class="form-control" placeholder="put your commments here" rows="3" name = 'commentText'></textarea>
        </div>
        <% if(currentUser && (! (camp.author.id.equals(currentUser._id)) ) ){ %>
            <div class="form-row">
                <div class="col-md-8">
                    <label for="starsRate">Rate the Camp</label>
                    <select class="form-control" id="starsRate" name="commentRate">
                        <option value="1">1 - Very Bad</option>
                        <option value="2">2 - Not good</option>
                        <option value="3">3 - Quiet well</option>
                        <option value="4">4 - Very Godd</option>
                        <option value="5">5 - Excellent</option>
                    </select>
                </div>
            
                <div class="col-md-4">
                    <div id= "starsContainer" class="float-right">
                        <span class = "fa fa-star checked" id="star1"></span>
                        <span class = "fa fa-star " id="star2"></span>
                        <span class = "fa fa-star " id="star3"></span>
                        <span class = "fa fa-star " id="star4"></span>
                        <span class = "fa fa-star " id="star5"></span>

                    </div>
                </div>
            
            </div>
        <% } %>
        <button class="btn btn-primary btn-block w-50 mx-auto" type="submit">SUBMIT</button>
    </form>
</div> 
<link rel="stylesheet" href = "/stylesheets/newCommentStyle.css">
<script src="/JS/custom/newComment.js"></script>

<%- include('../partials/footer'); -%>
