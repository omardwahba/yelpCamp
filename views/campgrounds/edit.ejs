<%- include('../partials/header'); -%>

<div class="container w-50 mx-auto"  >  
    <form  action = '/campgrounds/<%= camp._id %>?_method=PUT' method = 'POST' ">
        
        <h1 class="h3 mb-3 text-center">Edit <%= camp.name %> </h1>
        <div class="form-group">
            <label for="inputEmail">Camp Name</label>
            <input type="text" id="inputEmail" class="form-control" placeholder="NAME" name = 'camp[name]' value= "<%= camp.name %>" >
        </div>
        <div class="form-group">
            <label for="inputPassword">Image</label>
            <input type="text" id="inputPassword" class="form-control" placeholder="IMAGE URL" name = 'camp[url]' value=<%= camp.url %> >
        </div>
        <div class="form-group">
            <label for="inputDiscription">Description</label>
            <textarea  id="inputDiscription" class="form-control" rows="6" placeholder="put your description here .." name = 'camp[discription]'> <%= camp.discription %></textarea>
        </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">SUBMIT</button>
        
    </form>
</div> 


<%- include('../partials/footer'); -%>