<%- include('../partials/header'); -%>
<div class="text-center container" style=" width:fit-content; margin: auto auto; margin-top: 10%; " >  
    <form class="form-signin" action = '/campgrounds' method = 'POST' style="max-width: 330px;">
        <h1 class="h3 mb-3 font-weight-normal">Please fill required information</h1>
        <label for="inputEmail" class="sr-only">Camp Name</label>
        <input type="text" id="inputEmail" class="form-control" placeholder="NAME" name = 'camp[name]'>

        <label for="inputPassword" class="sr-only">Image</label>
        <input type="text" id="inputPassword" class="form-control" placeholder="IMAGE URL" name = 'camp[url]'>

        <label for="inputDiscription" class="sr-only">Description</label>
        <input type="text" id="inputDiscription" class="form-control" placeholder="put your description here .." name = 'camp[discription]'>

        <button class="btn btn-lg btn-primary btn-block" type="submit">SUBMIT</button>
    </form>
</div> 


<%- include('../partials/footer'); -%>